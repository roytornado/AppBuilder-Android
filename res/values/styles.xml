<resources>

    <style name="info_label">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey33</item>
    </style>

    <style name="info_text_small">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey33</item>
    </style>

    <style name="info_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey33</item>
    </style>

    <style name="info_text_bold">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey33</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="info_header">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey44</item>
    </style>

    <style name="info_error">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey33</item>
    </style>

    <style name="btn_normal">
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_SMALL_W">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_SMALL_B">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey33</item>
    </style>

    <style name="text_NORMAL_W">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_NORMAL_B">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey33</item>
    </style>

    <style name="text_BIG_W">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_BIG_B">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey33</item>
    </style>
</resources>